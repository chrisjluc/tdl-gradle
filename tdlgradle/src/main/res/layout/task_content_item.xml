<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="12sp" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvHashtag"
            android:layout_alignLeft="@+id/bEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="12sp"/>

        <ImageButton
            android:id="@+id/bEdit"
            android:layout_toLeftOf="@+id/bDelete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="5dp"
            android:background="@drawable/ic_edit_archive"/>
            <!--
            android:src="@drawable/abc_ic_menu_moreoverflow_normal_holo_light"/>
            -->
        <ImageButton
            android:id="@+id/bDelete"
            android:layout_alignParentRight="true"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_margin="5dp"
            android:background="@drawable/ic_delete_archive"/>
            <!--
            android:src="@drawable/abc_ic_clear_holo_light"/>
            -->

    </RelativeLayout>


</LinearLayout>